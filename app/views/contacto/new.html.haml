%section#perfil
  %span.icon_perfil
  %h2
    %span.gris CONTACTO
    %span.naranja 
  .linea_perfil
  = form_for @contact_form, :url => '/contacto', :method => :post do |form|
    %article.formulario_perfil
      
      
      =label_tag :nombre 

      = form.email_field :nombre,:class=>'text_perfil'

      =label_tag :email 

      = form.email_field :email,:class=>'text_perfil'

      %h3{:style=>"margin-top:1.2em;"} Comentario
      = form.text_area :comentario,:class=>"area_comentario",:rows=>20, :cols=>40

      = form.submit 'Enviar', :class => 'btn_guardar'

    %article.tipo_mensaje
      .izq
        = form.radio_button(:tipo, 'contacto', :checked => true, :style => 'width:auto')
        pregunta / comentario
        %br
        = form.radio_button(:tipo, 'denuncia', :style => 'width:auto')
        denuncia
    %btn_guardar


