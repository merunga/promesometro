  .linea_perfil
  %article.formulario_perfil
    %h3 Preferencias

    = form_for(resource, :as => resource_name, :url => ciudadanos_update_profile_url, :html => { :method => :put }) do |f| 
      = devise_error_messages! 

      %p
        = label_tag :email, "Email"
        = f.email_field :email, :readonly => true, :class=>"text_perfil" 

      =label_tag :name,  "Nombre"
      = f.text_field :name, :class=>"text_perfil"
      
      =label_tag :publico, "Mostrar mi nombre"
      = f.check_box :perfil_publico 
      

      / <!--
      / <%#<label for="ciudadano_send_notification">Recibir notificaciones</label>
      / <%= f.check_box :send_notifications %></p>#%>
      / -->

      %p
        = f.submit "Actualizar", :style =>'height: 25px', :class => 'btn_guardar' 
    

