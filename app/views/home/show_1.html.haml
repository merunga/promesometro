#banner
  - if flash[:notice]
    %div(class="alert alert-success" style="position:relative;margin-top:-42px")
      = flash[:notice]

  = image_tag 'mide.png'
  = image_tag 'accelerometer.png'
#od_title
  %h1 Últimas promesas
#vp_title
  %h1 En boca de todos
-#peru_title
  %h1 Perú

#official_declaration
  - Promesa.publicas.by_newest.order('fecha_declaracion, created_at DESC').limit(12).each do |p|
    .comment
      = render :partial => 'promesas/resumen', :locals => { :promesa => p }
      
#vox_populi
  - Comment.by_newest.order('created_at DESC').limit(8).each do |c|
    = render :partial => 'comments/comment', :locals => { :comment => c, :level => 0, :position => 0 }

