.comentarios
  %span.ciudadano 
    Comentarios de 
    = comment.ciudadano.screen_name if comment.ciudadano
  %span.tiempo
    =time_ago_in_words(comment.created_at)
  %div.texto_comentario
    ="\"#{comment.body}\""
  %span.votos 
    = render :partial => 'social/votar',:locals =>{:type=>'comment',:votable=>comment}
    